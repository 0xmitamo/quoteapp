<div class="main-user-show">
  <%= link_to :back do %>
    <div class="btn-back">
      <i class="fas fa-arrow-left my-back fa-lg"></i>
    </div>
  <% end %>

  <div class="container profile">
    <div class="user-show-user-image">
      <%= image_tag @user.picture.url %>
    </div>
    <div class="user-show-user-name">
      <p><%= @user.username %></p>
    </div>
  </div>

  <div class="container-tabs">
    <%= link_to "#liked", class: "tab liked" do %><div class="profile-tab">いいねした言葉</div><% end %>
    <%= link_to "#post", class: "tab post" do %><div class="profile-tab">投稿した言葉</div><% end %>
    <%= link_to "#follow", class: "tab follow" do%><div class="profile-tab">フォロー</div><% end %>
    <%= link_to "#follower", class: "tab follower" do %><div class="profile-tab">フォロワー</div><% end %>
  </div>

  <div class="container profile-contents">
    <div class="profile-contents-index" id="liked">
      <div class="profile-contents-columnFix">
      <% @picks.each do |pick| %>
        <% rhetoric = Rhetoric.find_by(id: pick.rhetoric_id) %>
        <div class="rheotorics-index-grid">
          <div class="rhetoric-index-content">
            <div class="rhetoric-index-img" id="result">
              <%= link_to image_tag(image_path(rhetoric.image)), rhetoric %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="profile-contents-index" id="post">
      <div class="profile-contents-columnFix">
      <% @user.posts.each do |post| %>
        <div class="rheotorics-index-grid">
          <div class="rhetoric-index-content">
            <div class="rhetoric-index-img" id="result">
              <%= link_to image_tag(image_path(post.image)), post %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
    <div class="profile-contents-index" id="follow">
      <div class="follow">
      </div>
    </div>
    <div class="profile-contents-index" id="follower">
      <div class="follower">
      </div>
    </div>
  </div>

</div>
        
