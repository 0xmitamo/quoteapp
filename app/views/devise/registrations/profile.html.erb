<div class="main-user-show">
  <%= link_to :back do %>
    <div class="btn-back">
      <i class="fas fa-arrow-left my-back fa-lg"></i>
    </div>
  <% end %>

  <div class="container profile">
    <div class="user-show-user-image">
      <%= image_tag @user.picture.url %>
    </div>
    <div class="user-show-user-name">
      <p><%= @user.username %></p>
    </div>
  </div>

  <div class="container-tabs">
    <div class="profile-tab liked">いいねした言葉</div>
    <div class="profile-tab post">投稿した言葉</div>
    <div class="profile-tab follow">フォロー</div>
    <div class="profile-tab follower">フォロワー</div>
  </div>

  <div class="container profile-contents">
    <div class="liked-rhetorics-index">
    </div>
    <div class="post-rhetorics-index">
    </div>
    <div class="follow-index">
    </div>
    <div class="follower-index">
    </div>
  </div>
    
</div>
        
          
          <div class="tab-follow">
          <section class="stats">
            <%= render 'devise/shared/stats' %>
          </section>
          <section>
            <%= render 'devise/shared/follow_form' if user_signed_in? %>
          </section>


        </div>
      </div>
    </div>
  </div>
</div>
</div>