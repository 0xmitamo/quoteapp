<div class="main inquiry">
    <div class="container inquiry">
    
        <div class="inquiry-grid message">
            <div class="inquiry-message">
                <h2>お問い合わせ</h2>
                <h5>Quoteをご利用いただきありがとうございます。<br>お問い合わせには48時間以内に返信いたします。</h5>
            </div>
        </div>

        <div class="inquiry-grid">
            <%= form_for(@inquiry, url: { action: :confirm }) do |f| %>
                <div class="form-body">                
                    <% if @inquiry.errors.present? %>
                    <div>
                        <strong>入力内容にエラーがあります</strong>
                        <ul>
                        <% @inquiry.errors.each do |attr, error| %>
                            <li><%= error %></li>
                        <% end %>
                        </ul>
                    </div>
                    <% end %>
    
                    <div class="form-inputs name">
                        <strong>名前</strong>
                        <div class="form-outline">
                            <%= f.text_field :name, placeholder: '例 : アルベルト・アインシュタイン' %>
                        </div>
                    </div>
                    <div class="form-inputs email">
                        <strong>メールアドレス</strong>
                        <div class="form-outline">
                            <%= f.text_field :email, placeholder: '例 : theory.of.relativity@quote.jp' %>
                        </div>
                    </div>
                    <div class="form-inputs contact">
                        <strong>お問い合わせ内容</strong>
                        <div class="textarea-outline">
                            <%= f.text_area :content, placeholder: 'お問い合わせ内容' %>
                        </div>
                    </div>

                    <div class="form-actions">
                        <%= f.submit '確認画面へ' %>
                    </div>
                </div>
            <% end %>
        </div>

    </div>
</div>

