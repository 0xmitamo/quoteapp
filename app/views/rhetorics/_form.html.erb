<%= form_for(@rhetoric) do |f| %>
  <div class="form-group">
    <%= f.label :言葉（この部分が画像になります） %>
    <div class="form-outline">
      <%= f.text_field :meigen, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :出典などの説明 %>
    <div class="form-outline">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :この言葉を言った人の名前 %>
    <div class="form-outline">
      <%= f.text_field :speaker_list, value: @rhetoric.speaker_list.join(','),class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ハッシュタグを追加してください %>
    <div class="form-outline">
      <%= f.text_field :tag_list , value: @rhetoric.tag_list.join(','),class: "form-control" %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit %>
  </div>

<% end %>
